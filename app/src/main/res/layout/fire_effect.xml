<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".observerHome">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/fire_effect_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="4dp"
            android:layout_alignParentTop="true"
            android:text="Fire Effect"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="#212121"/>

        <LinearLayout
            android:id="@+id/layout_target_destroyed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fire_effect_heading"
            android:layout_margin="4dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/target" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Target Destroyed"
                android:background="@drawable/textview_border"
                android:textAlignment="center"
                android:textColor="#212121"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_data_correction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_target_destroyed"
            android:layout_margin="4dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/target" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Data Correction"
                android:background="@drawable/textview_border"
                android:textAlignment="center"
                android:textColor="#212121"
                android:textSize="30sp"/>
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:id="@+id/navId">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>