<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.observer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/binoculars"
        android:label="@string/app_name"
        android:roundIcon="@drawable/binoculars"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config"
            />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Log_in_Activity"
            android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".RegisterActivity"
            android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".HomeFragment"
            android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".Main_Home_Activity"
        android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".TargetHome"
            android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".TargetDataUI"
            android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".Confirm_Fire"
            android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".FIRE_EFFECT"
            android:theme="@style/AppThemeLogIn"/>
        <activity android:name=".MapsActivity"
            />
        <activity
            android:name=".App_Start_Activity"
            android:theme="@style/AppThemeLogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>